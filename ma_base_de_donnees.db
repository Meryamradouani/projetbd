-- Table des séances
CREATE TABLE Sessions (
    Id_S INTEGER PRIMARY KEY,
    Nom TEXT,
    Type TEXT,
    Niveau INTEGER
);

-- Table des entraineurs
CREATE TABLE Coaches (
    CodeE INTEGER PRIMARY KEY,
    Prenom TEXT,
    Nom TEXT,
    DateNaissance DATE
);

-- Table des horaires des séances
CREATE TABLE Horaire (
    Id_H INTEGER PRIMARY KEY,
    CodeE INTEGER,
    Jour TEXT,
    HeureDebut TIME,
    Duree INTEGER,
    Id_S INTEGER,
    GymSalle TEXT,
    FOREIGN KEY (CodeE) REFERENCES Coaches(CodeE),
    FOREIGN KEY (Id_S) REFERENCES Sessions(Id_S)
);
